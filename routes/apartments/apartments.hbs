<header class="page-header">
    <h2>Квартиры</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Квартиры</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
        <h2 class="panel-title">Список квартир</h2>
    </header>
    <div class="panel-body">
        <button href="#add-products" type="button" class="mb-xs mt-xs mr-xs btn btn-sm btn-default modal-with-form">
            <i class="fa fa-plus"></i> Добавить квартиру
        </button>
        <div class="zag">
            <h1>заглушка</h1>
        </div>
        <div class="table-responsive">
            <table id="js-apartments-table"
                class="display table table-bordered table-striped table-condensed mb-none customize"
                style="width:100%; display: none">
                <thead>
                    <tr>
                        <th>Адрес</th>
                        <th>Комнаты</th>
                        <th>Цена</th>
                        <th>Статус</th>
                        <th>Подробнее</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each apartments}}
                        <tr>
                            <td>{{this.address}}</td>
                            <td>{{this.rooms}}</td>
                            <td>{{this.price_per_day}}</td>
                            <td>{{this.statusName}}</td>
                            <td>
                                <a href="/apartments/{{this.id}}" target="_blank">Подробнее</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Адрес</th>
                        <th>Комнаты</th>
                        <th>Цена</th>
                        <th>Статус</th>
                        <th>Подробнее</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

<!-- Модалки-->

<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Добавление новой квартиры</h2>
        </header>
        <div class="panel-body">
            <form action="/api/apartments/add" id="js-apartments-add-form" class="form-horizontal mb-lg"
                novalidate="novalidate">
                <div class="form-group">
                    <label class="col-sm-6" style="text-align: right;">Квартира принадлежит фирме</label>
                    <div class="col-sm-6">
                        <div class="checkbox-custom checkbox-primary col-sm-3">
                            <input type="checkbox" name="apartment_owned" value="1" id="checkboxOwnedApartm">
                            <label for="checkboxOwnedApartm">Принадлежит</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Адрес</label>
                    <div class="col-sm-7">
                        <input name="address" type="text" class="form-control" placeholder="Введите адрес" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Количество комнат</label>
                    <div class="col-sm-7">
                        <input name="rooms" type="number" class="form-control" placeholder="Введите количество"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Цена за сутки, руб.</label>
                    <div class="col-sm-7">
                        <input name="price_per_day" type="number" class="form-control prices-control-class" placeholder="Введите цену"
                            required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Коммунальные услуги в месяц, руб.</label>
                    <div class="col-sm-7">
                        <input name="utilities_per_month" type="number" class="form-control prices-control-class" placeholder="Введите сумму"
                            required>
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary">Подтвердить</button>
                    <button class="btn btn-default modal-dismiss">Отмена</button>
                </div>
            </form>
        </div>
    </section>
</div>
<script>
  'use strict';
  const pricesControlClass = document.querySelectorAll('.prices-control-class');
  pricesControlClass.forEach(function(item) {
    item.addEventListener('input', function(evt) {
        this.value < 0 ? this.value = 0 : this.value;
    });
  });
</script> 