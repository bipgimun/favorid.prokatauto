<header class="page-header">
    <h2>Расход денежных средств</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Расход</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <div class="panel-body">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Новый документ расхода</h2>
            </header>
            {{#each costs}}
                <div class="panel-body js-editable-body">
                    <form id="js-costs-add-form" action="/api/costs/update" class="form-horizontal mb-lg"
                        novalidate="novalidate">
                        <input type="hidden" name="id" value="{{id}}">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Дата</label>
                            <div class="non-editable-content" data-target="date">
                                {{toIsoString this.date 'DD.MM.YYYY'}}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <input value="{{toIsoString this.date 'YYYY-MM-DD'}}" name="date" type="date"
                                    class="form-control" placeholder="Введите дату" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Основание</label>
                            <div class="col-sm-8 style-non-editable">
                                {{#if document_id}}
                                    {{base}}
                                {{else if driver_id}}
                                    <a href="/drivers/{{../driver.id}}" target="__blank">{{../driver.name}}</a>
                                {{else if supplier_id}}
                                    <a href="/suppliers/{{supplier_id}}">{{supplier_name}}</a>
                                {{else}}
                                    <p>{{base}}</p>
                                {{/if}}
                            </div>
                        </div>

                        <div class="col-sm-12 control-label" style="text-align:center;">
                            <span>--------Разбивка--------</span>
                        </div>

                        <div class="form-group autos-group">
                            <div class="col-sm-12 control-label" style="text-align:center;">
                                <span>АВТОМОБИЛИ</span>
                            </div>
                            <div class="non-editable-content form-group col-sm-12">
                                <label class="col-sm-2 control-label">Авто</label>
                                <div class="non-editable-content">
                                    <div class="input-group">
                                        <div class="form-control" name="">Какая-то тачка</div>
                                        <span class="form-control">100 руб.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="editable-content">
                                <div class="form-group col-sm-12 autos-group__item">
                                    <label class="col-sm-2 control-label">Авто</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <select class="form-control" name="">
                                                <option value="0" selected disabled>Выберете автомобиль</option>
                                                <option value=""></option>
                                            </select>
                                            <input type="number" class="form-control input-sm"
                                                placeholder="руб">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default adding-item-autos" type="button">+</button>
                                            </span>
                                            <span class="input-group-btn">
                                                <button class="btn btn-default deliting-item-autos" type="button">-</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group apartments-group">
