<style>
    .js-editable-body .non-editable-content,
    .style-non-editable {
        display: block;
        padding-top: 7px;
        font-weight: bold;
    }

    .js-editable-body .editable-content {
        display: none;
    }

    .js-editable-body.editable-on .editable-content {
        display: block;
    }

    .js-editable-body.editable-on .non-editable-content {
        display: none;
    }

    .footer-btn-block-resrvation {
        display: flex;
    }

    .footer-resrvation-save-btn {
        margin-right: auto;
    }

    .footer-resrvation-end-btn {
        margin-left: auto;
        margin-right: 10px;
    }
</style>

<header class="page-header">
    <h2>Маршрут</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Маршрут</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <div class="panel-body">
        {{#each itineraries}}
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Подробнее о маршруте</h2>
                </header>
                <div class="panel-body js-editable-body">
                    <form action="/api/itineraries/update" id="js-itineraries-add-form" class="form-horizontal mb-lg" novalidate="novalidate">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Название маршрута</label>
                            <div class="non-editable-content" data-target="name">
                                {{this.name }}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <input name="name" type="text" class="form-control" placeholder="Введите данные"
                                    value="{{this.name }}" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Цена, руб.</label>
                            <div class="non-editable-content" data-target="price">
                                {{this.price }}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <input name="price" type="number" class="form-control prices-control-class" placeholder="Введите данные"
                                    min="0" value="{{this.price }}" required>
                            </div>
                        </div>
                        <div class="col-md-12 text-right editable-content">
                            <button class="btn btn-success">Сохранить</button>
                        </div>
                    </form>
                    <div class="col-md-12">
                        <button class="btn btn-primary js-toggleEditable">Редактировать</button>
                        <button data-id="{{id}}" data-target="itineraries"
                            class="btn btn-danger js-tableEssence-remove">Удалить</button>
                    </div>
                </div>
            </section>
        {{/each}}
    </div>
</section>

<script src="/assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>
<script>
  'use strict';
  const pricesControlClass = document.querySelectorAll('.prices-control-class');
  pricesControlClass.forEach(function(item) {
    item.addEventListener('input', function(evt) {
        this.value < 0 ? this.value = 0 : this.value;
    });
  });
</script> 