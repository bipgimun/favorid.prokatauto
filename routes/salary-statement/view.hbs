<style>
    .controls_details {
        display: block;
        width: 100%;
    }

    .controls_details-child {
        margin-bottom: 15px;
    }

    .controls_details_date-range {
        display: flex;
        max-width: 350px;
    }

    .header-details {
        font-size: 15px;
        font-weight: 600;
    }

    .header-details_span {
        margin: 0;
        display: block;
        font-size: 12px;
        color: #a6a8ab;
    }

    .save_and_print_buttons {
        margin-top: 15px;
    }
</style>

<header class="page-header">
    <h2>Документ № <span>ZPV-{{id}}</span></h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li>
                <span>Документ № <span>ZPV-{{id}}</span></span> <span class="separator"></span>
            </li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
        <h2 class="panel-title">Сохраненный документ ведомости №<span> ZPV-{{id}}</span> за
            <span>{{toIsoString det.period_left 'DD.MM.YYYY'}} -
                {{toIsoString det.period_right 'DD.MM.YYYY'}}</span></h2>
    </header>
    <div class="panel-body">
        <div class="after_create-wrapper">
            <div class="save_and_print_buttons col-md-7">
                <button data-id="{{id}}" class="btn btn-default" onclick="window.open('/api/salary-reports/print?report_id={{id}}')">Печать</button>
                <br>
                <br>
            </div>
            
            <div class="save_and_print_buttons col-md-7">
                <p>Менеджер: {{det.manager_name}}</p>
            </div>

            <table class="table table-bordered table-striped mb-none">
                <thead>
                    <tr>
                        <th colspan="9">
                            <span>Водитель:</span><span> {{det.driver_name}}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                   {{> salary-table total=det.sum details=details viewPage=true}}
                </tbody>

            </table>
        </div>
        <div class="delete-btn-wrapper">
            <button class="btn btn-danger js-tableEssence-remove" data-id="{{id}}" data-target="salary-reports">Удалить
                ведомость</button>
        </div>
    </div>
</section>