<script>
    const cusRadioPer = document.querySelector('.customer__person-radio');
    const cusRadioCom = document.querySelector('.customer__company-radio');
    cusRadioPer.addEventListener('change', function () {
        if (this.checked) {
            document.querySelector('.customer__person').style.display = "block";
            document.querySelector('.customer__company').style.display = "none";
        }
    });
    cusRadioCom.addEventListener('change', function () {
        if (this.checked) {
            document.querySelector('.customer__company').style.display = "block";
            document.querySelector('.customer__person').style.display = "none";
        }
    })
</script>
<script>
    var btnAddProduct1 = document.querySelector('.adding-item-email');
    var btnDeleteProduct1 = document.querySelector('.deliting-item-email');
    var table1 = document.querySelector('.customer-email-group');

    function insRow1() {
        var target = event.target;
        var grItem = table1.querySelectorAll('.customer-email-group__item');
        var new_row = grItem[0].cloneNode(true);
        new_row.querySelector('.adding-item-email').addEventListener('click', insRow1);

        var dateInp = new_row.querySelectorAll('input');
        for (var i = 0; i < dateInp.length; i++) {
            dateInp[i].value = '';
        }

        table1.appendChild(new_row);
    }

    function delRow1() {
        var target = event.target;
        var closeBtn = target.closest('.deliting-item-email');
        if (!closeBtn) return;

        var grItem = table1.querySelectorAll('.customer-email-group__item');
        var actualTbody = grItem.length;
        if (actualTbody == 1) {
            return;
        } else {
            indexRow = closeBtn.parentNode.parentNode.parentNode.parentNode.remove();
        }
    }

    btnAddProduct1.addEventListener('click', insRow1);

    table1.addEventListener('click', delRow1);
</script>
