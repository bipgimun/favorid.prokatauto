<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Добавление нового заказчика</h2>
        </header>
        <div class="panel-body">
            <form action="/api/customers/add" id="js-customers-add-form" class="form-horizontal mb-lg"
                novalidate="novalidate">
                <div class="form-group mt-lg">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-4">
                        <div class="radio-custom">
                            <input type="radio" id="radioExample1" value="1" name="is_legal_entity"
                                class="customer__company-radio" checked>
                            <label for="radioExample1">Юридическое лицо</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="radio-custom">
                            <input type="radio" id="radioExample2" value="0" name="is_legal_entity"
                                class="customer__person-radio">
                            <label for="radioExample2">Физ. лицо</label>
                        </div>
                    </div>
                </div>
                <div class="customer__company" style="margin-bottom: 15px;">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Наименование</label>
                        <div class="col-sm-8">
                            <input name="name" type="text" class="form-control" placeholder="Введите данные" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label"
                            style="text-transform: uppercase; font-weight: bold; text-align: center;">Реквизиты</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Юр.адрес</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="legal_address"
                                placeholder="Введите индекс, адрес" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Фактический адрес</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="actual_address"
                                placeholder="Введите индекс, адрес" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" name="email" class="form-control email-input"
                                placeholder="Введите email">
                        </div>
                    </div>
                    <div class="form-group customer-email-group">
                        <div class="customer-email-group__item">
                            <label class="col-sm-4 control-label">Доп.имейл</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input type="email" name="email" class="form-control email-input"
                                        placeholder="Введите email">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default adding-item-email" type="button">+</button>
                                    </span>
                                    <span class="input-group-btn">
                                        <button class="btn btn-default deliting-item-email" type="button">-</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">ОГРН</label>
                        <div class="col-sm-8">
                            <input type="number" name="ogrn" class="form-control ogrn-input" placeholder="Введите ОГРН"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">ИНН</label>
                        <div class="col-sm-8">
                            <input type="number" name="inn" class="form-control" placeholder="Введите ИНН" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Наимен-ие банка</label>
                        <div class="col-sm-8">
                            <input type="text" name="bank_name" class="form-control" placeholder="ООО 'БАНК', г.Уфа"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Р/счет</label>
                        <div class="col-sm-8">
                            <input type="number" name="r_account" class="form-control" placeholder="Введите данные"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">К/счет</label>
                        <div class="col-sm-8">
                            <input type="number" name="k_account" class="form-control" placeholder="Введите данные"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">БИК</label>
                        <div class="col-sm-8">
                            <input type="number" name="bik" class="form-control" placeholder="Введите данные" required>
                        </div>
                    </div>
                </div>
                <div class="customer__person" style="display: none; margin-bottom: 15px;">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">ФИО</label>
                        <div class="col-sm-8">
                            <input name="name" type="text" class="form-control" placeholder="Введите данные" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Дата рождения</label>
                        <div class="col-sm-8">
                            <input type="date" name="birthday" class="form-control" placeholder="Введите дату" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Водительское удостоверение</label>
                        <div class="col-sm-8">
                            <input name="driver_license" type="text" placeholder="12 34 567891" class="form-control"
                                required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Дата выдачи</label>
                        <div class="col-sm-4">
                            <input type="date" name="driver_license_issue_date" placeholder="Введите дату"
                                class="form-control" required>
                        </div>
                        <label class="col-sm-2 control-label">окончания</label>
                        <div class="col-sm-4">
                            <input type="date" name="driver_license_expiration_date" placeholder="Введите дату"
                                class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12 control-label"
                            style="text-transform: uppercase; font-weight: bold; text-align: center;">Паспортные
                            данные</label>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Серия, номер</label>
                        <div class="col-sm-8">
                            <input type="text" name="passport" placeholder="12 34 567891"
                                class="form-control passport-vers_num-input" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Дата выдачи</label>
                        <div class="col-sm-8">
                            <input type="date" name="passport_issue_date" placeholder="Введите дату"
                                class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Кем выдан</label>
                        <div class="col-sm-8">
                            <input type="text" name="passport_issued_by" placeholder="Введите данные"
                                class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Код подразделения</label>
                        <div class="col-sm-8">
                            <input type="text" name="passport_division_code" placeholder="123-456"
                                class="form-control passport-division_code-input" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Место жительства</label>
                        <div class="col-sm-8">
                            <textarea cols="20" name="location" rows="4" class="form-control"
                                placeholder="Введите данные" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Контактный телефон</label>
                    <div class="col-sm-8">
                        <input name="contact_number" id="contact_number" placeholder="+7(123) 123-12-34"
                            class="form-control phone-input" required>
                    </div>
                </div>
                <div class="form-group customer-tel-group">
                    <div class="customer-tel-group__item">
                        <label class="col-sm-4 control-label">Доп.телефон</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input name="contact_number" placeholder="+7(123) 123-12-34"
                                    class="form-control phone-input">
                                <span class="input-group-btn">
                                    <button class="btn btn-default adding-item-tel" type="button">+</button>
                                </span>
                                <span class="input-group-btn">
                                    <button class="btn btn-default deliting-item-tel" type="button">-</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Скидка, %</label>
                    <div class="col-sm-8">
                        <input name="discount" type="number" placeholder="Введите размер скидки" max="100" min="0"
                            value="0" class="form-control prices-control-class">
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary js-nomenclature-products-add">Подтвердить</button>
                    <button class="btn btn-default modal-dismiss js-nomenclature-products-cancel">Отмена</button>
                </div>
            </form>
        </div>
    </section>
</div>
