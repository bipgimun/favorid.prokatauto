<header class="page-header">
    <h2>Счета</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Счета</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
        <h2 class="panel-title">Документы выставленных счетов</h2>
    </header>
    <div class="panel-body">
        
    </div>
</section>

<!-- Модалки-->

<div id="create-paying-document" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Выставить счет</h2>
        </header>
        <div class="panel-body">
            <form id="js-invoices-add-form" action="/api/invoices/add" class="form-horizontal mb-lg"
                novalidate="novalidate">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Основание</label>
                    <div class="col-sm-9">
                        <select name="code" style="width: 100%" name="base_id" id="js-invoices-base-select">
                            <option></option>
                            {{#each groupDocuments}}
                                <optgroup label="{{this.label}}">
                                    {{#each documents}}
                                        <option value="{{code}}">{{code}}</option>
                                    {{/each}}
                                </optgroup>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Общая сумма</label>
                    <div class="col-sm-9">
                        <input name="sum" type="number" class="form-control" placeholder="Введите сумму" required>
                    </div>
                </div>

                <div class="row">
                    <div class="row">
                        <div class="col-md-11 text-right">
                            <button class="btn btn-success">Выставить</button>
                            <button class="btn btn-default modal-dismiss">Отмена</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

<header class="page-header">
    <h2>Приход денежных средств</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Приход</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <div class="panel-body">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Новый документ прихода</h2>
            </header>
            {{#each incomes}}
                <div class="panel-body js-editable-body">
                    <form id="js-incomes-form" action="/api/incomes/update" class="form-horizontal mb-lg"
                        novalidate="novalidate">
                        <input type="hidden" name="id" value="{{id}}">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Дата</label>
                            <div class="non-editable-content" data-target="date">
                                {{toIsoString date 'DD.MM.YYYY'}}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <input value="{{toIsoString date 'YYYY-MM-DD'}}" type="date" name="date"
                                    class="form-control" placeholder="Введите дату" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Основание</label>
                            <div class="col-sm-8">
                                {{#if document_id}}
                                    <a
                                        href="/{{compare code 'CRR' 'car-reservation' 'apartment-reservations'}}/{{document_id}}">{{base}}</a>
                                {{else}}
                                    <p>{{base}}</p>
                                {{/if}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Касса / счет</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="non-editable-content" data-target="cashbox_name">
                                        {{cashbox_name}}
                                    </div>
                                    <div class="editable-content">
                                        <select style="width: 100%" name="cash_storage_id"
                                            id="js-incomesForm-cashStorages-view">
                                            <option value="" selected disabled>Выберите кассу / счёт из списка</option>
                                            {{#each ../cashStorages}}
                                                <option {{compare id ../cash_storage_id 'selected' ''}} value="{{this.id}}">{{this.name}}</option>
                                            {{/each}}
                                        </select>
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="button">Добавить</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Сумма</label>
                            <div class="non-editable-content" data-target="sum">
                                {{sum}}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <input value="{{sum}}" type="number" name="sum" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Комментарий</label>
                            <div class="non-editable-content" data-target="comment">
                                {{comment}}
                            </div>
                            <div class="col-sm-8 editable-content">
                                <textarea value="{{comment}}" name="comment" cols="20" rows="4"
                                    class="form-control" placeholder="Введите комментарий" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 text-right editable-content">
                            <div class="footer-btn-block-resrvation">
                                <button class="btn btn-success footer-resrvation-save-btn">Сохранить</button>
                            </div>
                        </div>
                    </form>
                </div>
            {{/each}}
            <div class="footer-btn-block-resrvation">
                {{#unless item.completed}}
                    <button class="btn btn-primary js-toggleEditable">Редактировать</button>
                    <button class="btn btn-danger footer-resrvation-end-btn">Завершить</button>
                    <button data-target="incomes" data-id="{{id}}" class="btn btn-danger js-tableEssence-remove">Удалить документ</button>
                {{/unless}}
            </div>
        </section>
    </div>
</section>
<script src="/assets/javascripts/invoices.js" defer></script>