<header class="page-header">
    <h2>Кассы, счета</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Кассы, счета</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
        <h2 class="panel-title">Список касс, счетов</h2>
    </header>
    <div class="panel-body">
        <button href="#add-products" type="button" class="mb-xs mt-xs mr-xs btn btn-sm btn-default modal-with-form">
            <i class="fa fa-plus"></i> Добавить кассу/счет
        </button>
        <div class="zag">
            <h1>заглушка</h1>
        </div>
        <div class="table-responsive">
            <table id="js-cash-storages-table"
                class="display table table-bordered table-striped table-condensed mb-none customize"
                style="width:100%; display: none">
                <thead>
                    <tr>
                        <th>Касса</th>
                        <th>Название</th>
                        <th>Номер</th>
                        <th>Подробнее</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each storages}}
                        <tr>
                            <td>{{this.cashbox_title}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.number}}</td>
                            <td><a href="/cash-storages/{{this.id}}" target="_blank">Подробнее</a></td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Касса</th>
                        <th>Название</th>
                        <th>Номер</th>
                        <th>Подробнее</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

<!-- Модалки-->

<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Добавление новой кассы/счета</h2>
        </header>
        <div class="panel-body">
            <form action="/api/cashStorages/add" id="js-cashStorages-add-form" class="form-horizontal mb-lg" novalidate="novalidate">
                <div class="form-group mt-lg">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-4">
                        <div class="radio-custom">
                            <input type="radio" id="radioExample1" value="1" name="cashbox">
                            <label for="radioExample1">Касса</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="radio-custom">
                            <input type="radio" id="radioExample2" value="0" name="cashbox">
                            <label for="radioExample2">Счет</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Название</label>
                    <div class="col-sm-8">
                        <input name="name" type="text" class="form-control" placeholder="Введите данные" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Номер</label>
                    <div class="col-sm-8">
                        <input name="number" type="text" class="form-control" placeholder="Введите данные" required>
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary">Подтвердить</button>
                    <button class="btn btn-default modal-dismiss">Отмена</button>
                </div>
            </form>
        </div>
    </section>
</div>
<script src="/assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>