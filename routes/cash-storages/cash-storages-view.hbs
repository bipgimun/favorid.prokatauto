<style>
    .js-editable-body .non-editable-content {
        display: block;
    }

    .js-editable-body .editable-content {
        display: none;
    }

    .js-editable-body.editable-on .editable-content {
        display: block;
    }

    .js-editable-body.editable-on .non-editable-content {
        display: none;
    }
</style>

<header class="page-header">
    <h2>Кассы, счета</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Кассы, счета</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <div class="panel-body">
        {{#each storages}}
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Добавление новой кассы/счета</h2>
                </header>
                <div class="panel-body js-editable-body">
                    <div class="form-group mt-lg">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <div class="radio-custom">
                                <input type="radio" id="radioExample1" value="1" name="cashbox">
                                <label for="radioExample1">Касса</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="radio-custom">
                                <input type="radio" id="radioExample2" value="0" name="cashbox">
                                <label for="radioExample2">Счет</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Название</label>
                        <div class="non-editable-content">
                            {{this.name }}
                        </div>
                        <div class="col-sm-8 editable-content">
                            <input name="name" type="text" class="form-control" placeholder="Введите данные" value="{{this.name }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Номер</label>
                        <div class="non-editable-content">
                            {{this.number }}
                        </div>
                        <div class="col-sm-8 editable-content">
                            <input name="number" type="text" class="form-control" placeholder="Введите данные" value="{{this.number }}"required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button class="btn btn-primary js-toggleEditable">Редактировать</button>
                    </div>
                </div>
            </section>
        {{/each}}
    </div>
</section>


<script src="/assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>