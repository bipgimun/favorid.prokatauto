<style>
    .js-editable-body .non-editable-content,
    .style-non-editable {
        display: block;
        padding-top: 7px;
        font-weight: bold;
    }

    .js-editable-body .editable-content {
        display: none;
    }

    .js-editable-body.editable-on .editable-content {
        display: block;
    }

    .js-editable-body.editable-on .non-editable-content {
        display: none;
    }

    .footer-btn-block-resrvation {
        display: flex;
    }

    .footer-resrvation-save-btn {
        margin-right: auto;
    }

    .footer-resrvation-end-btn {
        margin-left: auto;
        margin-right: 10px;
    }

</style>

<header class="page-header">
    <h2>Личный кабинет</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="/">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Личный кабинет</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>

<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
      <h2 class="panel-title">Личная информация</h2>
    </header>

    <div class="panel-body js-editable-body">
        <form action="" id="" class="form-horizontal mb-lg" novalidate="novalidate">
            <div class="form-group">
                <label class="col-md-3 control-label">Аккаунт</label>
                <div class="col-md-6">

                    <div class="non-editable-content" data-target="">
                        Kiokadawd
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Юзернейм">
                        </div>
                    </div>

                    <div class="non-editable-content" data-target="">
                        Пароль: *********
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="password" class="form-control" placeholder="Пароль">
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Должность</label>
                <div class="col-md-6">
                    <div class="non-editable-content" data-target="">
                        Руководитель
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-suitcase"></i>
                            </span>
                            <select class="form-control">
                                <option value="" disabled selected>Выберите должность</option>
                                <option value="position__manager">Менеджер</option>
                                <option value="position__senior_manager">Старший менеджер</option>
                                <option value="position__leader">Руководитель</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Личная</label>
                <div class="col-md-6">
                    <div class="non-editable-content" data-target="">
                        Иван Иванович Иванов
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="ФИО">
                        </div>
                    </div>

                    <div class="non-editable-content" data-target="">
                        21.12.2014
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-star"></i>
                            </span>
                            <input value="{{this}}" name="" type="date" class="form-control" placeholder="Дата рождения" required>
                        </div>
                    </div>

                    <div class="non-editable-content" data-target="">
                        +7-999-117-13-63
                    </div>
                    <div class="editable-content">
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Телефон">
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12 text-right editable-content">
                <div class="footer-btn-block-resrvation">
                    <button class="btn btn-success footer-resrvation-save-btn">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
    <div class="footer-btn-block-resrvation">
        {{#unless this.completed}}
            <button class="btn btn-primary js-toggleEditable">Редактировать</button>
        {{/unless}}
        <button data-id="{{id}}" data-target="" class="btn btn-danger js-tableEssence-remove">Уволить</button>
    </div>
</section>

<script src="/assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>