<header class="page-header">
    <h2>Водители (прокат)</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Водители (прокат)</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
      <h2 class="panel-title">Список водителей (прокат)</h2>
    </header>
    <div class="panel-body">
        <button href="#add-products" type="button" class="mb-xs mt-xs mr-xs btn btn-sm btn-default modal-with-form">
            <i class="fa fa-plus"></i> Добавить водителя
        </button>
        <div class="zag">
            <h1>заглушка</h1>
        </div>
        <div class="table-responsive">
            <table id="js-nomenclature-products-table" class="display table table-bordered table-striped table-condensed mb-none customize" style="width:100%; display: none">
                <thead>
                    <tr>
                        <th>ФИО</th>
                        <th>Телефон</th>
                        <th>Подробнее</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each goods}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.purchase_price}}</td>
                            <td>{{this.selling_price}}</td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>ФИО</th>
                        <th>Телефон</th>
                        <th>Подробнее</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

<!-- Модалки-->

<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Добавление нового водителя (прокат)</h2>
        </header>
        <div class="panel-body">
            <form id="js-nomenclature-products-form" class="form-horizontal mb-lg" novalidate="novalidate">
              <div class="form-group">
                <label class="col-sm-4 control-label">ФИО</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" placeholder="Введите данные"
                        required>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">Контактный телефон</label>
                <div class="col-sm-8">
                  <input id="phone" data-plugin-masked-input="" data-input-mask="+7 (999) 999-9999" placeholder="+7 (123) 123-1234" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">Водительское удостоверение</label>
                <div class="col-sm-8">
                  <input type="text" placeholder="Введите данные" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">Паспортные данные</label>
                <div class="col-sm-8">
                  <input type="text" placeholder="Введите данные" class="form-control">
                </div>
              </div>
              <div class="form-group mt-lg">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-4">
                  <div class="radio-custom">
                    <input type="radio" id="radioExample1" name="radioExample">
                    <label for="radioExample1">Личный</label>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="radio-custom">
                    <input type="radio" id="radioExample2" name="radioExample">
                    <label for="radioExample2">Закрепленный</label>
                  </div>
                </div>
              </div>
              <div class="col-md-12 text-right">
                <button class="btn btn-primary js-nomenclature-products-add">Подтвердить</button>
                <button class="btn btn-default modal-dismiss js-nomenclature-products-cancel">Отмена</button>
              </div>
            </form>
        </div>
    </section>
</div>
<script src="assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>