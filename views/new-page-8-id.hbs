<style>
    .js-editable-body .non-editable-content {
        display: block;
    }

    .js-editable-body .editable-content {
        display: none;
    }

    .js-editable-body.editable-on .editable-content {
        display: block;
    }

    .js-editable-body.editable-on .non-editable-content {
        display: none;
    }
</style>

<header class="page-header">
    <h2>Дополнительные услуги</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Дополнительные услуги</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <div class="panel-body">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Добавление новой услуги</h2>
            </header>
            <div class="panel-body js-editable-body">                
                <div class="form-group">
                    <label class="col-sm-4 control-label">Название услуги</label>
                    <div class="non-editable-content">
                        {{this. }}
                    </div>
                    <div class="col-sm-8 editable-content">
                        <input name="name" type="text" class="form-control" placeholder="Введите данные" value="{{this. }}" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Цена, руб.</label>
                    <div class="non-editable-content">
                        {{this. }}
                    </div>
                    <div class="col-sm-8 editable-content">
                        <input name="price" type="number" class="form-control" placeholder="Введите данные" value="{{this. }}" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <button class="btn btn-primary js-toggleEditable">Редактировать</button>
                </div>
            </div>
        </section>
    </div>
</section>
<script src="/assets/vendor/jquery-maskedinput/jquery.maskedinput.js"></script>