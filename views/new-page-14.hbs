<header class="page-header">
    <h2>Дополнительные услуги (квартиры)</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Доп.услуги (квартиры)</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
        <h2 class="panel-title">Список дополнительных услуг для квартир</h2>
    </header>
    <div class="panel-body">
        <button href="#add-products" type="button" class="mb-xs mt-xs mr-xs btn btn-sm btn-default modal-with-form">
            <i class="fa fa-plus"></i> Добавить услугу
        </button>
        <div class="zag">
            <h1>заглушка</h1>
        </div>
        <div class="table-responsive">
          <table id="js-nomenclature-products-table"
              class="display table table-bordered table-striped table-condensed mb-none customize"
              style="width:100%; display: none">
            <thead>
              <tr>
                <th>Услуга</th>
                <th>Цена</th>
                <th>Подробнее</th>
              </tr>
            </thead>
            <tbody>
              {{#each storages}}
                  <tr>
                      <td>{{this.cashbox}}</td>
                      <td>{{this.name}}</td>
                      <td>{{this.number}}</td>
                      <td></td>
                  </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
                <th>Услуга</th>
                <th>Цена</th>
                <th>Подробнее</th>
              </tr>
            </tfoot>
          </table>
        </div>
    </div>
</section>

<!-- Модалки-->

<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
  <section class="panel">
    <header class="panel-heading">
      <h2 class="panel-title">Добавление новой квартиры</h2>
    </header>
    <div class="panel-body">
      <form class="form-horizontal mb-lg" novalidate="novalidate">
        <div class="form-group">
          <label class="col-sm-5 control-label">Адрес</label>
          <div class="col-sm-7">
              <input type="text" class="form-control" placeholder="Введите адрес" required>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-5 control-label">Количество комнат</label>
          <div class="col-sm-7">
              <input type="number" class="form-control" placeholder="Введите количество" required>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-5 control-label">Цена за сутки, руб.</label>
          <div class="col-sm-7">
              <input type="number" class="form-control" placeholder="Введите цену" required>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-5 control-label">Коммунальные услуги в месяц, руб.</label>
          <div class="col-sm-7">
              <input type="number" class="form-control" placeholder="Введите сумму" required>
          </div>
        </div>
        <div class="col-md-12 text-right">
          <button class="btn btn-primary">Подтвердить</button>
          <button class="btn btn-default modal-dismiss">Отмена</button>
        </div>
      </form>
      </div>
  </section>
</div>