<header class="page-header">
    <h2>Прайс</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-book"></i>
                </a>
            </li>
            <li><span>Прайс</span> <span class="separator"></span></li>
        </ol>
    </div>
</header>
<section class="panel panel-featured panel-featured-primary">
    <header class="panel-heading">
      <h2 class="panel-title">Заказчики услуг</h2>
    </header>
    <div class="panel-body">
        <button href="#add-products" type="button" class="mb-xs mt-xs mr-xs btn btn-sm btn-default modal-with-form">
            <i class="fa fa-plus"></i> Добавить авто
        </button>
        <div class="zag">
            <h1>заглушка</h1>
        </div>
        <div class="table-responsive">
            <table id="js-nomenclature-products-table" class="display table table-bordered table-striped table-condensed mb-none customize" style="width:100%; display: none">
                <thead>
                    <tr>
                      <th>Марка, модель</th>
                      <th>Цена, руб/сут.</th>
                      <th>Лимит, км/сут.</th>
                      <th>Пер-ег, руб/км</th>
                      <th>Подробнее</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each goods}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.purchase_price}}</td>
                            <td>{{this.selling_price}}</td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                      <th>Марка, модель</th>
                      <th>Цена, руб/сут.</th>
                      <th>Лимит, км/сут.</th>
                      <th>Пер-ег, руб/км</th>
                      <th>Подробнее</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>

<!-- Модалки-->

<div id="add-products" class="modal-block modal-block-primary mfp-hide" style="max-width: 700px;">
  <section class="panel">
      <header class="panel-heading">
          <h2 class="panel-title">Добавление нового авто</h2>
      </header>
      <div class="panel-body">
          <form class="form-horizontal mb-lg" novalidate="novalidate">
              <div class="form-group mt-lg">
                  <label class="col-sm-4 control-label">Марка автомобиля</label>
                  <div class="col-sm-8">
                      <input type="text" class="form-control" placeholder="Введите марку" required>
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Модель</label>
                  <div class="col-sm-8">
                      <input type="text" class="form-control" placeholder="Введите модель" required>
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Класс</label>
                  <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="Введите класс">
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Цена в сутки, руб</label>
                  <div class="col-sm-8">
                      <input type="number" class="form-control" placeholder="Введите цену" required>
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Залог, руб.</label>
                  <div class="col-sm-8">
                      <input type="number" class="form-control" placeholder="Введите цену" required>
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Лимит км в сутки</label>
                  <div class="col-sm-8">
                      <input type="number" class="form-control" placeholder="Введите расстояние" required>
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-4 control-label">Цена перепробега за км, руб.</label>
                  <div class="col-sm-8">
                      <input type="number" class="form-control" placeholder="Введите пробег" required>
                  </div>
              </div>
              <div class="col-md-12 text-right">
                  <button class="btn btn-primary">Подтвердить</button>
                  <button class="btn btn-default modal-dismiss">Отмена</button>
              </div>
          </form>
      </div>
  </section>
</div>
